{
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		]
	},
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"rootDir": "./src/",
		"outDir": "./prod/",
		"strict": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"sourceMap": false,
		"baseUrl": "./",
		"paths": {
			"botConfig": [
				"src/bot.config.ts"
			],
			"utils/*": [
				"src/utils/*"
			],
			"supabaseDB/*": [
				"./src/supabase/*"
			],
			"utilities/*": [
				"./src/utilities/*"
			],
			"constants/*": [
				"./src/constants/*"
			],
			"src/*": [
				"./src/*"
			],
		}
	},
	"files": [
		"src/bot.ts"
	],
	"include": [
		"./**/*.ts",
		"./*.ts",
		"./**/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"prod"
	]
}